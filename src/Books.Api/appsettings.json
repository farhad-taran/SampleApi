{
  "StorageSettings": {
    "ConnectionString": "server=localhost;uid=user;pwd=password;database=books"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.ColoredConsole"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "ColoredConsole"
            }
          ]
        }
      },
      {
        "Name": "File",
        "Args": { "path": "Logs/log.txt" }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "Books.Api"
    }
  }
}
